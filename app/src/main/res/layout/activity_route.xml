<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation = "vertical"
    tools:context="com.xomena.cmpfutboltfe.RouteActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textAlignment="center"
        android:singleLine="false"
        android:id="@+id/routeCaption"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textAlignment="center"
        android:singleLine="false"
        android:id="@+id/routeTitle"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/routeWarnings"
        android:layout_below="@id/routeTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/routeDistanceDuration"
        android:layout_below="@id/routeWarnings" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/routeStartAddress"
        android:layout_below="@id/routeDistanceDuration" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routeListView"
        android:layout_below="@id/routeStartAddress"
        android:layout_centerHorizontal="true"
        android:layout_weight=".40" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/routeEndAddress"
        android:layout_below="@id/routeListView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/routeCopyright"
        android:layout_below="@id/routeEndAddress" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/route_map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/routeCopyright"
        android:layout_weight=".40"
        />

</LinearLayout>
